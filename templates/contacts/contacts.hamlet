
<header.app-top-app-bar.background>
  <md-icon-button type=link href=@{MyContactsR uid}>
    <md-icon>arrow_back

  <h1.title-large>
    _{MsgContacts}

<main>

  $forall (status,msg) <- filter ((==) statusError . fst) msgs
    <div.app-banner.error.body-medium>
      #{status}. #{msg}

  $if null users
    <figure style="text-align:center">
      <span.on-secondary style="font-size:4rem">&varnothing;
      <figcaption.body-large>
        _{MsgNoRegisteredUsersYet}
  $else

    <form method=post action=@{ContactsR uid} enctype=#{et} ##{idFormPostContacts}>
      ^{fw}

        
  <md-fab label=_{MsgAdd} aria-label=_{MsgAdd} ##{idFabAdd} onclick="#{idFormPostContacts}.submit()">
    <md-icon slot=icon>add

$forall (status,msg) <- filter ((/=) statusError . fst) msgs
  <aside.app-snackbar.shape-small.elevation-1.primary-container>
    <md-elevation>
    <span.body-medium>#{status}. #
    <span.body-medium>#{msg}
